@model IEnumerable<WebApplication1.Models.ViewPageList1>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>APPStore</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/Content/CSS/style.css?v=@DateTime.Now.Millisecond">
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-5 " id="Home">
                    <a href="#">
                        <img src="/Content/images/5_White_logo_on_black_104x73.png">
                    </a>

                </div>
                <div class="col-lg-6" id="Home" >
                    <ul class=" d-flex menu" >
                        <li class="menu__item">
                            <a href="#Home" >
                                Home
                            </a>
                        </li>
                        <li class="menu__item">
                            <a href="#Download" >
                                Download
                            </a>
                        </li>
                        <li class="menu__item">
                            <a href=" #support">
                                Support
                            </a>
                        </li>
                        <li class="menu__item">
                            <a href="/Home/Index" >
                                Log Out
                            </a>
                        </li>
                    </ul>
                </div>
            </div> 
                                    <div class="row">
                <div class="col-lg-12 slider" id="Home">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
           
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/Content/images/AIMP3_Logo.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/Content/images/VLC_Logo.png" alt="Second slide">
                            </div>
                            
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12" id="Download">
                    <h1 class="Download">
                        Download
                    </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-10">
                    <nav class="offers">
                        <ul>
                            @foreach(var Item in Model)
                            {
                            <li class="offers__item">
                                <h1>@Item.Title</h1>
                                <p>
                                    @Item.Description
                                </p>
                                <ul class="featuring">
                                    <h3 class="featuring__title">Системные требования</h3>
                                    
                                    @for (int i = 0; i < @Item.ListOfFeatures.Split(',').Length-1; i++)
                                    {
                                    <li>
                                        @Item.ListOfFeatures.Split(',')[i]
                                    </li>
                                    }
                                </ul>
                                <a href="@Url.Action("DownloadData", "View", new {name = Item.Title, url = Item.URL})">Download @Item.Title</a>
                                <p class="offer__after">
                                    @Item.DescriptionAfter
                                </p>
                            </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>

        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 support" id="support">
                    <h1>Support</h1>
                    GENERAL INFORMATION
                    If you have any trouble with APPStore products, please send us email to: support@appstore.com and we will try to help you. If you have any thoughts or questions about products of APPStore, please email to: info@appstore.com Support-related issues from customers are handled as soon as possible. 
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p class="registration__footer">Copyright © APPStore 2011 - 2018</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
